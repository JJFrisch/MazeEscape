<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MazeEscape.CampaignPage"
             Title="">



    <!-- Battle Cats type of campain screen
         Each level has a Maze and is represented by a circle or somthing (image button) 
         If the previous level is completed (at least 1 star), the next level opens up and is clickable
         Horizontal scroll to future levels.
    At some point is a gate where a high number of stars needs to be eared to unlock and continue
    At the bottom of the screen is a couple "power ups" like a hint or path solver or hot/cold
    (image) and number of power up owned (label)
    
    -->  

    
        <AbsoluteLayout x:Name="CampaignAbsoluteLayout" Margin="0,-80,0,0"
            BackgroundColor="LightSkyBlue">
        <!-- LightSkyBlue -->

        <Image AbsoluteLayout.LayoutBounds="0,0,1,0.102"
         AbsoluteLayout.LayoutFlags="All"
         Source="background_blue_1.png"
            Aspect="AspectFill"
         Opacity="1"/>


        <Label x:Name="starCountLabel"
               FontSize="35"
               TextColor="White"
               VerticalTextAlignment="Center"
            AbsoluteLayout.LayoutBounds="0.216,0,60,0.1"
            AbsoluteLayout.LayoutFlags="PositionProportional,HeightProportional"/>

        <Image
            Source="full_star.png"
            HorizontalOptions="Start"
            AbsoluteLayout.LayoutBounds="0.05,0,40,0.1"
            AbsoluteLayout.LayoutFlags="PositionProportional,HeightProportional"/>

        <Label x:Name="CoinCountLabel"  
               FontSize="35"
               Text="30"
               TextColor="White"
               VerticalTextAlignment="Center"
               HorizontalTextAlignment="End"
               AbsoluteLayout.LayoutBounds="0.636,0,100,0.1"
               AbsoluteLayout.LayoutFlags="PositionProportional,HeightProportional"/>
            
        <Image
            Source="coin.png"
            HorizontalOptions="Start"
            AbsoluteLayout.LayoutBounds="0.45,0,40,0.1"
            AbsoluteLayout.LayoutFlags="PositionProportional,HeightProportional"/>


        <Image AbsoluteLayout.LayoutBounds="1,1,1,0.14"
            AbsoluteLayout.LayoutFlags="All"
            Source="background_blue_3.png"
               Aspect="AspectFill"
            Opacity="1"/>


        <ScrollView x:Name="campaignScrollView" Orientation="Horizontal"
                    AbsoluteLayout.LayoutBounds="0.5,0.4,1,0.8"
                    AbsoluteLayout.LayoutFlags="All"
                    Scrolled="OnScrollViewScrolled"
                    >

            <AbsoluteLayout x:Name="campaignMazeBackgroundAbsoluteLayout" 
                            WidthRequest="1860">

                <Image AbsoluteLayout.LayoutBounds="1,1,1,1"
                   AbsoluteLayout.LayoutFlags="All"
                   Source="campaign_background_1.png"
                   Aspect="Fill"/>


                <Grid x:Name="campaignLevelGrid" 
                    Padding="2,0"
                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All"
                    ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*,*"
                    RowDefinitions="*,*,*,*,*">

                </Grid>

                
                <!-- Gates, Gate Labels-->

                <ImageButton x:Name="gateImage1"
                       AbsoluteLayout.LayoutBounds="21,250,60,102"
                       AbsoluteLayout.LayoutFlags="None"
                       Aspect="AspectFit"
                       Source="gate4.png"
                       Rotation="270"
                       Clicked="OnLockedGateImageButtonClicked"/>

                <Label x:Name="gateLabel1"
                       AbsoluteLayout.LayoutBounds="43,291.5,20,20"
                       AbsoluteLayout.LayoutFlags="None"
                       Text="20"
                       FontSize="12"
                       TextColor="Gold"
                       FontAttributes="Bold"/>

              

                <ImageButton x:Name="gateImage2"
                       AbsoluteLayout.LayoutBounds="252,100,60,105"
                       AbsoluteLayout.LayoutFlags="None"
                       Aspect="AspectFit"
                       Source="gate4.png"
                       Clicked="OnLockedGateImageButtonClicked"/>

                <Label x:Name="gateLabel2"
                       AbsoluteLayout.LayoutBounds="275,142.5,20,20"
                       AbsoluteLayout.LayoutFlags="None"
                       Text="45"
                       FontSize="12"
                       TextColor="Gold"
                       FontAttributes="Bold"
                       Rotation="0"/>


                <ImageButton x:Name="gateImage3"
                    AbsoluteLayout.LayoutBounds="348,197,60,105"
                    AbsoluteLayout.LayoutFlags="None"
                    Aspect="AspectFit"
                    Source="gate4.png"
                    Rotation="180"
                    Clicked="OnLockedGateImageButtonClicked"/>

                <Label x:Name="gateLabel3"
                       AbsoluteLayout.LayoutBounds="370,240.5,20,20"
                       AbsoluteLayout.LayoutFlags="None"
                       Text="30"
                       FontSize="12"
                       TextColor="Gold"
                       FontAttributes="Bold"
                       Rotation="0"/>       


                <!-- Fog Images -->
                
                <Image x:Name="fog_area_1_image"
                       AbsoluteLayout.LayoutBounds="1,0.5,1490,500"
                       AbsoluteLayout.LayoutFlags="PositionProportional"
                       Aspect="Fill"
                       HorizontalOptions="End"
                       Source="fog_stage_1.png"/>

                <Image x:Name="fog_area_2_image"
                       AbsoluteLayout.LayoutBounds="1,0.5,1115,500"
                       AbsoluteLayout.LayoutFlags="PositionProportional"
                       Aspect="Fill"
                       HorizontalOptions="End"
                       IsVisible="False"
                       Source="fog_stage_2.png"/>

                <Image x:Name="fog_area_3_image"
                       AbsoluteLayout.LayoutBounds="1.03,0.5,987,529"
                       AbsoluteLayout.LayoutFlags="PositionProportional"
                       Aspect="Fill"
                       HorizontalOptions="End"
                       IsVisible="False"
                       Source="fog_stage_3.png"/>

                <Image x:Name="fog_area_4_image1"
                       AbsoluteLayout.LayoutBounds="1.015,0.5,330,529"
                       AbsoluteLayout.LayoutFlags="PositionProportional"
                       Aspect="Fill"
                       HorizontalOptions="End"
                       IsVisible="False"
                       Source="fog_stage_4.png"/>

                <Image x:Name="fog_area_4_image2"
                       AbsoluteLayout.LayoutBounds="1.015,-0.02,420,210"
                       AbsoluteLayout.LayoutFlags="PositionProportional"
                       Aspect="Fill"
                       IsVisible="False"
                       HorizontalOptions="End"
                       Source="fog_stage_4.png"/>


            </AbsoluteLayout>

        </ScrollView>


        <BoxView AbsoluteLayout.LayoutBounds="0.5,0.983,0.85,75"
                     AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
                     BackgroundColor="White"
                     Opacity="0.3"
                     CornerRadius="10,10,10,10"/> 



        <ImageButton Source="toolkit.png"
             AbsoluteLayout.LayoutBounds="0.2,0.982,50,70"
             AbsoluteLayout.LayoutFlags="PositionProportional"
             Clicked="BackButton_Clicked">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="Scale"
                    Value="1" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="Opacity"
                        Value="0.6" />
                                <Setter Property="Scale"
                        Value="0.95" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="PointerOver">
                            <VisualState.Setters>
                                <Setter Property="Opacity"
                        Value="0.75" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </VisualStateManager.VisualStateGroups>
        </ImageButton>

        <ImageButton Source="home_button_icon.png"
             AbsoluteLayout.LayoutBounds="0.5,0.982,55,70"
             AbsoluteLayout.LayoutFlags="PositionProportional"
             Clicked="BackButton_Clicked">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="Scale"
                    Value="1" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="Opacity"
                        Value="0.6" />
                                <Setter Property="Scale"
                        Value="0.95" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="PointerOver">
                            <VisualState.Setters>
                                <Setter Property="Opacity"
                        Value="0.8" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </VisualStateManager.VisualStateGroups>
        </ImageButton>

        <ImageButton x:Name="shopButton" Clicked="OnShopButtonClicked"  
                        AbsoluteLayout.LayoutBounds="0.8,0.982,50,70"
                        AbsoluteLayout.LayoutFlags="PositionProportional"
                        Source="shop_button_image.png" >
            <VisualStateManager.VisualStateGroups>
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="Scale"
                    Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Opacity"
                        Value="0.4" />
                            <Setter Property="Scale"
                        Value="0.95" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Opacity"
                        Value="0.7" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
            </VisualStateManager.VisualStateGroups>
        </ImageButton>




    </AbsoluteLayout>
    
    
</ContentPage>